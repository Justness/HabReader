<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.meiolania.apps.habrahabr"
    android:installLocation="auto"
    android:versionCode="10"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme" >
        
        <activity
            android:name=".activities.PreferencesActivity"
            android:configChanges="orientation|keyboardHidden" />
        
        <!-- Auth -->
        <activity
            android:name=".activities.AuthActivity"
            android:configChanges="orientation|keyboardHidden" />
        <activity
            android:name=".activities.SignOutActivity"
            android:configChanges="orientation|keyboardHidden" />
        
        <!-- Feed -->
        <activity
            android:name=".activities.FeedActivity"
            android:configChanges="orientation|keyboardHidden" />

        <!-- Posts -->
        <!-- The main entry point of application -->
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PostsShowActivity"
            android:configChanges="orientation|keyboardHidden"
            android:exported="false"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="habrahabr.ru"
                    android:pathPrefix="/post"
                    android:scheme="http" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PostsSearchActivity"
            android:configChanges="orientation|keyboardHidden" />

        <!-- Hubs -->
        <activity
            android:name=".activities.HubsActivity"
            android:configChanges="orientation|keyboardHidden" />
        <activity
            android:name=".activities.HubsShowActivity"
            android:configChanges="orientation|keyboardHidden" />
        <activity
            android:name=".activities.HubsSearchActivity"
            android:configChanges="orientation|keyboardHidden" />

        <!-- Q&A -->
        <activity
            android:name=".activities.QaShowActivity"
            android:configChanges="orientation|keyboardHidden"
            android:exported="false"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="habrahabr.ru"
                    android:pathPrefix="/qa"
                    android:scheme="http" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.QaSearchActivity"
            android:configChanges="orientation|keyboardHidden" />

        <!-- Events -->
        <activity
            android:name=".activities.EventsShowActivity"
            android:configChanges="orientation|keyboardHidden"
            android:exported="false"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="habrahabr.ru"
                    android:pathPrefix="/events/"
                    android:scheme="http" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Companies -->
        <activity
            android:name=".activities.CompaniesShowActivity"
            android:configChanges="orientation|keyboardHidden"
            android:exported="false"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="habrahabr.ru"
                    android:pathPrefix="/company"
                    android:scheme="http" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- People -->
        <activity
            android:name=".activities.UsersShowActivity"
            android:configChanges="orientation|keyboardHidden"
            android:exported="false"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="habrahabr.ru"
                    android:pathPrefix="/users/"
                    android:scheme="http" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.UsersSearchActivity"
            android:configChanges="orientation|keyboardHidden" />

        <service android:name="net.robotmedia.billing.BillingService" />

        <receiver android:name="net.robotmedia.billing.BillingReceiver" >
            <intent-filter>
                <action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
                <action android:name="com.android.vending.billing.RESPONSE_CODE" />
                <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>